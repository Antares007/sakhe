// @flow
import type {Stream} from '@most/types'
import type {Data} from '../vtree/types'

import type {Absurd, Ray0 as StateRay, RState} from '../rstate'
import type {Ray0 as RVNodeRay, Action, RVNode} from '../vtree/rvnode'

export interface Ray<A> {
  snode<Key: $Keys<A>, B: $Subtype<$ElementType<$Exact<A>, Key>>>(
    key: Key,
    absurd: Absurd<B>,
    tag: string,
    data?: Data
  ): (pith: SPith<B>) => void;
}
export type VPith<A> = (put: RVNodeRay & Ray<A>) => void

export type SPith<A> = (
  state: StateRay<A>,
  on: Stream<Action>
) => VPith<A> | Stream<VPith<A>>

export type Bark<A> = (pith: SPith<A>) => Stream<RState<A> | RVNode>

declare export default function tree<A>(
  absurd: Absurd<A>,
  tag: string,
  data?: Data
): Bark<A>
