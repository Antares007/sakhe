// @flow
import type {Stream} from '@most/types'
import type {Absurd, Ray0 as RstateRay} from './rstate'

export type Ray<A> = {
  ...$Exact<RstateRay<A>>,
  extend<Key: $Keys<A>, B: $Subtype<$ElementType<$Exact<A>, Key>>>(
    key: Key,
    absurdB: Absurd<B>
  ): (pith: Pith<B> | Stream<Pith<B>>) => void,
}

export type Pith<A> = (state: Ray<A>, onChange: Stream<A>) => void

export type Bark<A> = (pith: Pith<A> | Stream<Pith<A>>) => Stream<A>

declare export default function tree<A>(
  absurdA: Absurd<A>,
  initState?: A
): Bark<A>
