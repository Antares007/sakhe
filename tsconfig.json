{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "out",
    "rootDir": ".",
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "alwaysStrict": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "examples/**/*.ts"],
  "exclude": []
}
